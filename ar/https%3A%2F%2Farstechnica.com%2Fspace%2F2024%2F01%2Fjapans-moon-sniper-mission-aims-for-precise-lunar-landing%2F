<!-- Sparrow begin -->
<script type="text/plain" class="optanon-category-C0004">
  (function() {
    function DQ() {
      var queue = window.sparrowQueue;
      this.push = fn => fn();
      window.sparrowQueue = this;
      while (queue.length) {
        queue.shift()();
