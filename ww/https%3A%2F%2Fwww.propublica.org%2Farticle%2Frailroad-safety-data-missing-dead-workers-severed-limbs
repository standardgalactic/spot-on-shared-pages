        border-right: 1px solid hsla(0, 0%, 100%, 0.2);
    }

    .admin-shortcuts__user:before,
    .admin-shortcuts__icon {
        align-self: center;
    }

    .admin-shortcuts__icon {
        width: 1.1em;
        height: 1.1em;
    }
</style>


