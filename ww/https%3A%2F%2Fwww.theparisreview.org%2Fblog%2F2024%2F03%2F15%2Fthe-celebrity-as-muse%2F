<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>The Celebrity as Muse</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/psnow/" title="Posts by Philippa Snow" rel="author">Philippa Snow</a></address>
			<time>March 15, 2024</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/arts-culture/" rel="category tag">Arts &amp; Culture</a></h3>
		</section>
    <!-- <p>The art and life of Mark di Suvero</p> -->
	</div>
	<!-- end article subtitles -->

