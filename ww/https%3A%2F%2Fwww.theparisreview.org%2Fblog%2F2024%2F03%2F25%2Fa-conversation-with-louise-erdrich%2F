<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>A Conversation with Louise Erdrich</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/sholywhitemountain/" title="Posts by Sterling HolyWhiteMountain" rel="author">Sterling HolyWhiteMountain</a></address>
			<time>March 25, 2024</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/revisited/" rel="category tag">Revisited</a></h3>
		</section>
    <!-- <p>The art and life of Mark di Suvero</p> -->
	</div>
	<!-- end article subtitles -->

