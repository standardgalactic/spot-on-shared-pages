<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>Summer</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/kzambreno/" title="Posts by Kate Zambreno" rel="author">Kate Zambreno</a></address>
			<time>October 25, 2023</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/on-art/" rel="category tag">On Art</a></h3>
		</section>
    <!-- <p>The art and life of Mark di Suvero</p> -->
	</div>
	<!-- end article subtitles -->

