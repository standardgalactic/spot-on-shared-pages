    <script src="https://static.propublica.org/projects/graphics/js/scrollama.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const mediaQuery = window.matchMedia('(min-width:48em)');     
    var currentWindowWidth;
    
    // Create functions below this ------------>

    
    function desktopStuff() {
      currentWindowWidth = "desktop";
      //document.documentElement.classList.remove("force-dark-mode");
            const fadeScroll = new IntersectionObserver(
        function (items, observer) {
          items.forEach((item) => {
               
            if (item.isIntersecting) {
       
              item.target.classList.add("fade-in");
            } 
          });
        },
        {
          root: null,
          rootMargin: "0px",
          threshold: 0.9,
        }
      );
      document.querySelectorAll(".quote__container").forEach((item) => fadeScroll.observe(item));

      var clientHeight = 0;
      var clientWidth = 0;
      const hScrollerList = document.querySelectorAll(".hs-scroller");
      const clampNumber = (min, num, max) => Math.max(Math.min(num, Math.max(min, max)), Math.min(min, max));




    // hScrollerUpdateHeights
      function hScrollerUpdateHeights() {
        hScrollerList.forEach((element) => {
          if (!clientHeight) {
            clientHeight = document.documentElement.clientHeight;
            clientWidth = document.documentElement.clientWidth;
          }
          element.setAttribute(
            "style",
            "height: " +
              element.querySelector(".hs-scroller__items").scrollWidth +
              "px"
          );
        });
      }

    // hScrollerUpdateScroll
      function hScrollerUpdateScroll() {
        hScrollerList.forEach((element) => {
      const hScrollerBounds = element.getBoundingClientRect();

      const hScrollRatio =
        hScrollerBounds.top /
        (hScrollerBounds.height -
          clientHeight); /* Returns a number between -1 and 0, representing progress */
      const hScrollTotalAmount = element.querySelector(
        ".hs-scroller__items"
      ).scrollWidth;

      const translateAmount = Math.round(
        clampNumber(-1, hScrollRatio, 0) * (hScrollTotalAmount - clientWidth)
      );

 

      // if (hScrollerBounds.top <= 0 && hScrollerBounds.bottom > clientHeight) {
      element
        .querySelector(".hs-scroller__items")
        .setAttribute(
          "style",
          "transform: translateX(" + translateAmount + "px);"
        );
      // }
    });
      }
    
      ["DOMContentLoaded", "rafResize"].forEach(function (e) {
        window.addEventListener(e, function () {
          if (currentWindowWidth == "desktop") {
            clientHeight = document.documentElement.clientHeight;
            clientWidth = document.documentElement.clientWidth;
            hScrollerUpdateHeights();
          } 
        });
      });

      ["rafScroll", "rafResize"].forEach(function (e) {
        window.addEventListener(e, function () {
          if (currentWindowWidth == "desktop") {
            hScrollerUpdateScroll();
          };
        });
      });

    }

    function mobileStuff() {
            currentWindowWidth = "mobile";



            // get rid of the height and transform:translate leftover from the horz scroll
            var hsScrollerId = document.querySelector(".hs-scroller");
            hsScrollerId.style.height = "auto";
            document.querySelector(".hs-scroller__items").style.transform = "translateX(0px)";

            const scrollys = document.querySelectorAll(".hs-scroller");
            scrollys.forEach(function(scrollyitem,scrollyindex){
                const scrollySteps = scrollyitem.querySelectorAll(".scrolly-text .step");
                const item = scrollyitem.querySelector(".hs-scroller__wrapper");


                const scroller = scrollama(); 
                scroller
                 .setup({
                  step: scrollySteps, 
                  offset: 0.9, 
                 })
                 .onStepEnter((response) => {
                  if (scrollyindex == 0){
                    scrolly1handleStepEnter(response)
                  } else if (scrollyindex == 1){ 
                    scrolly2handleStepEnter(response)
                  } else { 
                    scrolly3handleStepEnter(response)
                  }

                 })


                scroller.resize;


                function scrolly1handleStepEnter(response){
                    let num = response.index+1 
                    if (response.index == 0 && response.direction === 'up'){ 
                         item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                    }
                  if (response.index == 0 && response.direction === 'down'){
                    item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                }  if (response.index > 0){ 
                    item.querySelectorAll(".hs-scroller__item").forEach(el => el.classList.remove("active"));

                    setTimeout(function(){ 
                      item.querySelector(".hs-"+num).classList.add("active")
                    }, 50);

                  
                  }
                } 

                function scrolly2handleStepEnter(response) {
                   let num = response.index+1 
                           if (response.index == 0 && response.direction === 'up'){ 
                         item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                    }
                  if (response.index == 0 && response.direction === 'down'){
                    item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-8").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                }  if (response.index > 0){ 
                    item.querySelectorAll(".hs-scroller__item").forEach(el => el.classList.remove("active"));

                    setTimeout(function(){ 
                      item.querySelector(".hs-"+num).classList.add("active")
                    }, 50);

                  
                  }
                }

                function scrolly3handleStepEnter(response) {
                    let num = response.index+1 
                            if (response.index == 0 && response.direction === 'up'){ 
                         item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                    }
                  if (response.index == 0 && response.direction === 'down'){
                    item.querySelector(".hs-2").classList.remove("active");
                    item.querySelector(".hs-3").classList.remove("active");
                    item.querySelector(".hs-4").classList.remove("active");
                    item.querySelector(".hs-5").classList.remove("active");
                    item.querySelector(".hs-6").classList.remove("active");
                    item.querySelector(".hs-7").classList.remove("active");
                    item.querySelector(".hs-8").classList.remove("active");
                    item.querySelector(".hs-1").classList.add("active");
                }  if (response.index > 0){ 
                    item.querySelectorAll(".hs-scroller__item").forEach(el => el.classList.remove("active"));

                    setTimeout(function(){ 
                      item.querySelector(".hs-"+num).classList.add("active")
                    }, 50);

                  
                  }
                }
          })
    }


    if (mediaQuery.matches){ 
      desktopStuff();
    } else { 
      mobileStuff();
    }

    function handleResize() {
          if (!mediaQuery.matches && currentWindowWidth == "desktop") {
            mobileStuff();
          } else if (mediaQuery.matches && currentWindowWidth == "mobile") {
            desktopStuff();
          }
    }

    handleResize();
    window.addEventListener("resize", handleResize);

    

     const darkBackground = new IntersectionObserver(
           function (items, observer) {
             const dark_mode_setting = localStorage.getItem("dark-mode-setting");

             if (dark_mode_setting !=='dark'){ 
                 items.forEach((item) => {
                      if (item.isIntersecting) {
                            document.documentElement.classList.add("force-dark-mode");
                          } else {
                            document.documentElement.classList.remove("force-dark-mode");
                          }
                  });
              }
            },
           {
             root: null,
             rootMargin: "0px",
             threshold: 0.1,
           }
       );
       setTimeout(function(){ 
         document.querySelectorAll(".hs-scroller").forEach((item) => darkBackground.observe(item));
       },200); 
      
    



  }); 

</script>
