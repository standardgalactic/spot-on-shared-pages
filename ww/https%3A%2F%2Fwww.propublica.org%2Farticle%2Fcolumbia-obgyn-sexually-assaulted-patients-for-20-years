          <div class="hs-scroller__item hs-5">
            <figure>
              
    <!--SANDY-->
        <img
            class=""
            alt=""
            width="1745"
            height="2400"
            loading="lazy" js-autosizes        src="https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=1100&amp;q=75&amp;w=800&amp;s=f600e353d4d53a4d920eea31adf2ce19"
            srcset="https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=550&amp;q=75&amp;w=400&amp;s=744661431487e0cc3d453396c962c9aa 400w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=1100&amp;q=75&amp;w=800&amp;s=f600e353d4d53a4d920eea31adf2ce19 800w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=1650&amp;q=75&amp;w=1200&amp;s=58bf84052956adc5d1bead766cb1a737 1200w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=1788&amp;q=75&amp;w=1300&amp;s=e28b95c29fc860ede0d27717f6532463 1300w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=1994&amp;q=75&amp;w=1450&amp;s=bedbe4f4d42006097b542888596148c0 1450w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=2201&amp;q=75&amp;w=1600&amp;s=c3d8c9a0071c924c990a2ac3e3feb6d9 1600w, https://img.assets-d.propublica.org/v5/images/Sandy-Abramowicz_1923FEA_OBGYN_NY-Mag-Columbia-Doc2289-toned.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=2751&amp;q=75&amp;w=2000&amp;s=be622d09a4b3c2bf62ca14eadfbd7beb 2000w"
