    <img
        class=""
        alt=""
        width="3000"
        height="2000"
        loading="lazy" js-autosizes        src="https://img.assets-d.propublica.org/v5/images/20230911-Watsamon-Formula-05291_preview_maxWidth_3000_maxHeight_3000_ppi_72_embedColorProfile_true_quality_95.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=533&amp;q=75&amp;w=800&amp;s=6946295ed5be98a74b5b08928831e076"
