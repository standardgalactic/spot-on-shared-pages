        alt=""
        width="3000"
        height="1998"
        loading="lazy" js-autosizes        src="https://img.assets-d.propublica.org/v5/images/h_28.9524316_maxWidth_3000_maxHeight_3000_ppi_72_quality_95_embedColorProfile_true.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=533&amp;q=75&amp;w=800&amp;s=1ad72ba923520d1f8a1faca73042d130"
