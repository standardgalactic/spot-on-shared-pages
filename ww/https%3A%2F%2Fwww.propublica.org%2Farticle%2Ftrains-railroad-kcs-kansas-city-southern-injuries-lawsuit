    <img
        class=""
        alt=""
        width="2198"
        height="1758"
        loading="lazy" js-autosizes        src="https://img.assets-d.propublica.org/v5/images/20231218-Derail-Sign_preview_maxWidth_3000_maxHeight_3000_ppi_72_embedColorProfile_true_quality_95.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=640&amp;q=75&amp;w=800&amp;s=f781ca875bae2290077b178fdfeac8fd"
