                    srcset="https://img.assets-d.propublica.org/v5/images/0915-Impeach-Trial-Day-9-JS-174_maxWidth_3000_maxHeight_3000_ppi_72_quality_95_embedColorProfile_true.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=105&amp;q=75&amp;w=105&amp;s=11e43b9f815ace8a0284941f8eea9d10 105w, https://img.assets-d.propublica.org/v5/images/0915-Impeach-Trial-Day-9-JS-174_maxWidth_3000_maxHeight_3000_ppi_72_quality_95_embedColorProfile_true.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=210&amp;q=75&amp;w=210&amp;s=815f4801c34909e9bccf4cb489b2538f 210w"
