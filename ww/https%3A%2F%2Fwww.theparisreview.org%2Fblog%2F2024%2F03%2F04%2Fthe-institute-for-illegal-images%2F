<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>The Institute for Illegal Images</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/edavis/" title="Posts by Erik Davis" rel="author">Erik Davis</a></address>
			<time>March 4, 2024</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/on-drugs/" rel="category tag">On Drugs</a></h3>
		</section>
    <!-- <p>The art and life of Mark di Suvero</p> -->
	</div>
	<!-- end article subtitles -->

